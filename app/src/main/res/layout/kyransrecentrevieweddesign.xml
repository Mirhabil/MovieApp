<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewCopyProfileFoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textViewCopy4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="2dp"
                android:maxLength="10"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewCopy5"
                app:layout_constraintStart_toEndOf="@+id/imageViewCopyProfileFoto"
                app:layout_constraintTop_toTopOf="@+id/imageViewCopyProfileFoto" />

            <TextView
                android:id="@+id/textViewCopy5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Review by"
                android:textColor="#80F4F1F1"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCopyProfileFoto"
                app:layout_constraintStart_toStartOf="@+id/textViewCopy4"
                app:layout_constraintTop_toBottomOf="@+id/textViewCopy4" />

            <TextView
                android:id="@+id/textViewCopyReview"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="working stiffs.  not sure i've ever mentioned this before but i have a very personal fear of not... feeling... correctly. like enormously important things are happening around you in a matter-of-fact, dissociative way that you can understand the significance of but you can't shake.."
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                app:layout_constraintEnd_toStartOf="@+id/imageViewCopyPoster"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textViewCopy5"
                app:layout_constraintTop_toBottomOf="@+id/textViewCopy5" />

            <TextView
                android:id="@+id/textViewCopy7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read more >"
                android:textColor="#9C4A8B"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textViewCopyReview"
                app:layout_constraintTop_toBottomOf="@+id/textViewCopyReview" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewCopyPoster"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@+id/textViewCopy7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewCopy4"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="TextView"
                android:textColor="#80F4F1F1"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="@+id/textViewCopy4"
                app:layout_constraintStart_toEndOf="@+id/textViewCopy4" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Kyran"
                android:textColor="#E9A6A6"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/textViewCopy5"
                app:layout_constraintStart_toEndOf="@+id/textViewCopy5"
                app:layout_constraintTop_toTopOf="@+id/textViewCopy5" />

            <RatingBar
                android:id="@+id/ratingBar6"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="#EC0808"
                app:layout_constraintStart_toEndOf="@+id/textView45"
                app:layout_constraintTop_toTopOf="@+id/textView45" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>